{

  "python.jediEnabled": false,
  // Require .prettierrc
  "prettier.requireConfig": false,
  "prettier.disableLanguages": [
      "vue",
      "markdown"
  ],

  "suggest.maxCompleteItemCount": 20,

  // Run prettier (and others)
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "html",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  //html config

  "html.enable": true,
  "html.filetypes": [
      "html",
      "handlebars",
      "htmldjango",
      "htm"
  ],

  "html.format.enable": true,
  "html.validate.styles": true,
  "html.validate.html": true,
  "html.validate.scripts": true,

  "markdownlint.config": {
      "default": true,
      "single-title": false,
      "line-length": false
  }
}
